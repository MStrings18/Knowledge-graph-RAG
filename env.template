# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# === API Credentials ===
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_CREDENTIALS_JSON=your_google_credentials_json_here
GCP_PROJECT_ID=your_gcp_project_id
GCP_LOCATION=us
GCP_REGION=us-central1

# === Path Configuration ===
# Leave empty to use default paths relative to BASE_DIR
DATA_DIR=
DOCUMENTS_DIR=
CHUNKS_PATH=

# === Neo4j Configuration ===
NEO4J_URI=neo4j://127.0.0.1:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123
NEO4J_DATABASE=graph

# === Database Paths ===
# Leave empty to use default paths relative to BASE_DIR
LANGGRAPH_MEMORY_DB_PATH=
MOCK_INSURANCE_DB_PATH=
THREADS_DB_PATH=

# === PDF Directory ===
# Leave empty to use default pdfs directory
PDFS_DIR=

# === Processing Configuration ===
CHUNK_SIZE=600
CHUNK_OVERLAP=150
FREQUENCY_THRESHOLD=0.03
TOP_K_KEYWORDS=1
MAX_DEPTH=1
ENABLE_RERANKING=false
MAX_TOKENS=30000

# === Model Configuration ===
PRO_MODEL_NAME=gemini-2.5-flash
FLASH_MODEL_NAME=gemini-2.5-flash-lite
